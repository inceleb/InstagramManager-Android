<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_profile_pic"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:onClick="onClickProfile"
        android:src="@drawable/test"/>
    <LinearLayout
        android:layout_toRightOf="@id/list_profile_pic"
        android:layout_width="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="onClickProfile"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/list_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account_id"
            android:textSize="12dp"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:id="@+id/list_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:textColor="#e0e0e0"
            android:text="작성했던 댓글 내용"/>
        <TextView
            android:id="@+id/list_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorDarkGrayText"
            android:text="지난주"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/sumnail"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/test"></ImageView>
</RelativeLayout>