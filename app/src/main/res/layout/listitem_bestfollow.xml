<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="7dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="6dp"
        android:onClick="onClickProfile"
        android:src="@drawable/test"/>
    <TextView
        android:id="@+id/list_rank"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/circle_tv"
        android:gravity="center"
        android:text="1"
        android:textSize="13dp"
        android:textStyle="bold"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_toRightOf="@id/list_profile_pic"
        android:layout_width="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:onClick="onClickProfile"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account_id"
            android:textSize="13dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/colorWhite"
            android:text="사용자 이름"/>
        <TextView
            android:id="@+id/list_is_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:textColor="@color/colorUserBackground"
            android:text="내가 팔로우 하는 중"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="2dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_menu_white_24dp"
            android:tint="@color/colorUserBackground"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1,000"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="6dp"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_menu_white_24dp"
            android:tint="@color/colorUserBackground"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 1,000"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>


</RelativeLayout>