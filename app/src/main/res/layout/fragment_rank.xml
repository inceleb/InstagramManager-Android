<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="com.dothome.inceleb.instamanager.Tab.RankFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_title_height"
        android:background="@color/colorRankBackground"
        android:text="랭킹"
        android:textStyle="bold"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_title_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rank_tab_follower"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorRankBackground"
            android:gravity="center"
            android:textStyle="bold"
            android:text="팔로워 랭킹"/>
        <TextView
            android:id="@+id/rank_tab_hash"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorHomeActivityBackground"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="해시태그 랭킹"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/rank_follewer"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_menu_height"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/user_icon_1"
                android:layout_width="@dimen/fragment_menu_icon_size"
                android:layout_height="@dimen/fragment_menu_icon_size"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_menu_white_24dp"
                android:tint="@color/colorRankBackground"/>
            <TextView
                android:layout_toRightOf="@id/user_icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체 랭킹"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:tint="@color/colorRankBackground"
                android:src="@android:drawable/ic_media_play"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorHomeActivityBackground"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_menu_height"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/user_icon_2"
                android:layout_width="@dimen/fragment_menu_icon_size"
                android:layout_height="@dimen/fragment_menu_icon_size"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_menu_white_24dp"
                android:tint="@color/colorRankBackground"/>
            <TextView
                android:layout_toRightOf="@id/user_icon_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="셀럽(여)"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:tint="@color/colorRankBackground"
                android:src="@android:drawable/ic_media_play"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorHomeActivityBackground"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_menu_height"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/user_icon_3"
                android:layout_width="@dimen/fragment_menu_icon_size"
                android:layout_height="@dimen/fragment_menu_icon_size"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_menu_white_24dp"
                android:tint="@color/colorRankBackground"/>
            <TextView
                android:layout_toRightOf="@id/user_icon_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="셀럽(남)"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:tint="@color/colorRankBackground"
                android:src="@android:drawable/ic_media_play"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorHomeActivityBackground"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_menu_height"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <ImageView
                android:id="@+id/user_icon_4"
                android:layout_width="@dimen/fragment_menu_icon_size"
                android:layout_height="@dimen/fragment_menu_icon_size"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_menu_white_24dp"
                android:tint="@color/colorRankBackground"/>
            <TextView
                android:layout_toRightOf="@id/user_icon_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 팔로워 순위"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:textColor="#ffffff"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:tint="@color/colorRankBackground"
                android:src="@android:drawable/ic_media_play"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorHomeActivityBackground"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/rank_hash"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_rank_height"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRankBackground"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRankBackground"
                    android:text="("
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"
                    android:text="▴"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRankBackground"
                    android:text="3"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRankBackground"
                    android:text=")"
                    android:textSize="18dp"/>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#일상"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="4dp"
                    android:tint="@color/colorRankBackground"
                    android:src="@android:drawable/ic_media_play"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2,345"
                    android:textSize="13dp"
                    android:textColor="@color/colorWhite" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ("
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryText"
                    android:text="▴"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,000)"
                    android:textSize="12dp"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorHomeActivityBackground"></LinearLayout>

    </LinearLayout>

</LinearLayout>
