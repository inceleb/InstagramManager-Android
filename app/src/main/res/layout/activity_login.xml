<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25262b">
    <LinearLayout
        android:id="@+id/interestview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="관심있는 분야를\n선택해 주세요"
                android:textColor="@color/colorWhite"
                android:textSize="27dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선택한 분야를 기준으로 맞춤정보를 제공합니다."
                android:textColor="@color/colorWhite"
                android:textSize="13dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <CheckBox
                    android:layout_margin="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/toggle_interest_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@drawable/toggle_interest_btn_text"
                    android:textSize="13dp"
                    android:text="패션"
                    android:onClick="onClickCheckbox"
                    android:tag="fashion"
                    android:button="@android:color/transparent"/>
                <CheckBox
                    android:layout_margin="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/toggle_interest_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@drawable/toggle_interest_btn_text"
                    android:textSize="13dp"
                    android:text="뷰티"
                    android:onClick="onClickCheckbox"
                    android:tag="beauty"
                    android:button="@android:color/transparent"/>
                <CheckBox
                    android:layout_margin="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/toggle_interest_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@drawable/toggle_interest_btn_text"
                    android:textSize="13dp"
                    android:text="여행"
                    android:onClick="onClickCheckbox"
                    android:tag="trip"
                    android:button="@android:color/transparent"/>
                <CheckBox
                    android:layout_margin="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/toggle_interest_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@drawable/toggle_interest_btn_text"
                    android:textSize="13dp"
                    android:text="공연"
                    android:onClick="onClickCheckbox"
                    android:tag="show"
                    android:button="@android:color/transparent"/>
                <CheckBox
                    android:layout_margin="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/toggle_interest_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@drawable/toggle_interest_btn_text"
                    android:textSize="13dp"
                    android:text="영화"
                    android:onClick="onClickCheckbox"
                    android:tag="movie"
                    android:button="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:layout_marginBottom="8dp">
                <CheckBox
                    android:layout_margin="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/toggle_interest_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@drawable/toggle_interest_btn_text"
                    android:textSize="13dp"
                    android:text="레저"
                    android:onClick="onClickCheckbox"
                    android:tag="leisure"
                    android:button="@android:color/transparent"/>
                <CheckBox
                    android:layout_margin="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/toggle_interest_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@drawable/toggle_interest_btn_text"
                    android:textSize="13dp"
                    android:text="스포츠"
                    android:onClick="onClickCheckbox"
                    android:tag="sport"
                    android:button="@android:color/transparent"/>
                <CheckBox
                    android:layout_margin="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/toggle_interest_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@drawable/toggle_interest_btn_text"
                    android:textSize="13dp"
                    android:text="인테리어"
                    android:onClick="onClickCheckbox"
                    android:tag="interior"
                    android:button="@android:color/transparent"/>
                <CheckBox
                    android:layout_margin="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/toggle_interest_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@drawable/toggle_interest_btn_text"
                    android:textSize="13dp"
                    android:text="IT"
                    android:onClick="onClickCheckbox"
                    android:tag="it"
                    android:button="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_margin="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/toggle_interest_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@drawable/toggle_interest_btn_text"
                    android:textSize="13dp"
                    android:text="반려동물"
                    android:onClick="onClickCheckbox"
                    android:tag="animal"
                    android:button="@android:color/transparent"/>
                <CheckBox
                    android:layout_margin="2dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@drawable/toggle_interest_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="@drawable/toggle_interest_btn_text"
                    android:textSize="13dp"
                    android:text="운동"
                    android:onClick="onClickCheckbox"
                    android:tag="exercise"
                    android:button="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:background="#849ef2"
        android:textColor="#ffffff"
        android:text="가입완료"
        android:gravity="center"
        android:textSize="16dp"
        android:onClick="onClickbtnJoin"/>
</RelativeLayout>